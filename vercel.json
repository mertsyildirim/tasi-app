{
  "framework": "nextjs",
  "buildCommand": "next build",
  "rewrites": [
    {
      "source": "/",
      "destination": "/portal/login"
    },
    {
      "source": "/portal",
      "destination": "/portal/login"
    },
    {
      "source": "/dashboard",
      "destination": "/portal/dashboard"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 